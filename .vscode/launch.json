    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server dev",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/.",
            "output": "${workspaceFolder}/.ignore/bin/app-debug",
            "args": [
                "server",
                "start",
                "--log-level",
                "debug",
            ],
            "buildFlags": "-tags=debug"
        },
        {
            "name": "Client dev",
            "request": "launch",
            "type": "node",
            "cwd": "${workspaceFolder}/ts",
            "runtimeExecutable":"npx",
            "runtimeArgs": ["next", "dev", "-H", "192.168.1.222", "--turbopack"],
        },
    ]
}